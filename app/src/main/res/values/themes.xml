<resources>

    <style name="MyHudiColorTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="iconTint">@color/black_2c</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Hudi</item>
        <item name="android:textColor">@color/black_2c</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="MyDarkensTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="materialButtonStyle">@style/Widget.App.Button.Dark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@color/darkens</item>
        <item name="hintTextColor">@color/white</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

    <style name="MyNormalTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="iconTint">@color/black_2c</item>
        <item name="navigationIcon">@drawable/ic_hamburger_menu_bottom_bar</item>
        <item name="materialButtonStyle">@style/Widget.App.Button.Normal</item>
        <item name="android:textColor">@color/black_2c</item>
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigationView</item>
    </style>

</resources>